<%= form_with(model: @category, url: categories_path, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Add Category", class: "btn btn-primary" %>
  </div>
<% end %>
